<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".fragments.WeatherFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ProgressBar
            android:id="@+id/progress_bar_weather"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:indeterminateTint="@color/primary" />

        <LinearLayout
            android:id="@+id/weather_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Current Weather Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:background="@drawable/toolbar_gradient_background">

                    <TextView
                        android:id="@+id/tv_location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_primary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        tools:text="Nairobi, KE" />

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="64sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_primary"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginBottom="8dp"
                        tools:text="25°C" />

                    <TextView
                        android:id="@+id/tv_weather_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/on_primary"
                        android:fontFamily="sans-serif"
                        android:alpha="0.9"
                        tools:text="Broken Clouds" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weather Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weather Details"
                        android:textAppearance="@style/PremiumTextAppearance.Headline2"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="20dp" />

                    <!-- Weather Details Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3">

                        <TextView
                            android:id="@+id/tv_humidity"
                            style="@style/WeatherDetailText"
                            tools:text="Humidity: 80%" />

                        <TextView
                            android:id="@+id/tv_pressure"
                            style="@style/WeatherDetailText"
                            tools:text="Pressure: 1012 hPa" />

                        <TextView
                            android:id="@+id/tv_visibility"
                            style="@style/WeatherDetailText"
                            tools:text="Visibility: 10km" />

                        <TextView
                            android:id="@+id/tv_uv_index"
                            style="@style/WeatherDetailText"
                            tools:text="UV Index: 5 (Moderate)" />

                        <TextView
                            android:id="@+id/tv_sunrise"
                            style="@style/WeatherDetailText"
                            tools:text="Sunrise: 06:30 AM" />

                        <TextView
                            android:id="@+id/tv_sunset"
                            style="@style/WeatherDetailText"
                            tools:text="Sunset: 06:45 PM" />

                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weather Alert Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/weather_alert_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/accent_warning_light"
                app:strokeColor="@color/accent_warning"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚠️ Weather Alert"
                        android:textAppearance="@style/PremiumTextAppearance.Headline2"
                        android:textColor="@color/accent_warning"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_adverse_weather_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/PremiumTextAppearance.Body1"
                        android:textColor="@color/accent_warning"
                        android:textStyle="bold"
                        tools:text="Adverse Weather Alert: Heavy rain expected around 8 PM." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Hourly Forecast Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hourly Forecast"
                        android:textAppearance="@style/PremiumTextAppearance.Headline2"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_hourly_forecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/PremiumTextAppearance.Body1"
                        android:textColor="@color/on_surface"
                        android:lineSpacingExtra="8dp"
                        android:background="@drawable/weather_detail_background"
                        android:padding="16dp"
                        tools:text="Now: 25°C\n4 hours: 22°C\n8 hours: 20°C" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>