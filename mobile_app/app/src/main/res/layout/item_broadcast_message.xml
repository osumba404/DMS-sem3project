<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_alert_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the main body of the alert message, providing details about the event."
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_alert_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-08-27 12:00:00"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>