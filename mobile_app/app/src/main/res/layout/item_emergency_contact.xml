<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="0dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Contact Avatar -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/card_background"
            android:backgroundTint="@color/primary_light"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Contact Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textAppearance="@style/PremiumTextAppearance.Headline2"
                android:textColor="@color/on_surface"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123-456-7890"
                android:textAppearance="@style/PremiumTextAppearance.Body1"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_contact_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relationship"
                android:textAppearance="@style/PremiumTextAppearance.Body2"
                android:textColor="@color/on_surface_variant"
                android:background="@drawable/weather_detail_background"
                android:backgroundTint="@color/background_secondary"
                android:padding="6dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_call_contact"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_call"
                android:background="@drawable/card_background"
                android:backgroundTint="@color/accent_safe_light"
                android:tint="@color/accent_safe"
                android:layout_marginBottom="8dp"
                android:contentDescription="Call contact" />

            <ImageButton
                android:id="@+id/btn_delete_contact"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="@drawable/card_background"
                android:backgroundTint="@color/accent_danger_light"
                android:tint="@color/accent_danger"
                android:contentDescription="Delete contact" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>