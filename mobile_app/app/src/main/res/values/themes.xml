<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    Premium Material Design 3 theme with enhanced visual hierarchy and modern styling
    -->
    <style name="Theme.Mobile_app" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand colors with enhanced contrast -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Surface colors for cards and elevated components -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/primary_variant</item>
        <item name="colorOnSecondary">@color/on_primary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Status bar with gradient effect -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar styling -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Enhanced window styling -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        
        <!-- Material components styling -->
        <item name="materialAlertDialogTheme">@style/AppMaterialAlertDialogTheme</item>
        <item name="bottomNavigationStyle">@style/PremiumBottomNavigationStyle</item>
        <item name="toolbarStyle">@style/PremiumToolbarStyle</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/PremiumButtonStyle</item>
        <item name="materialButtonOutlinedStyle">@style/PremiumButtonOutlinedStyle</item>
        
        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/PremiumCardStyle</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/PremiumTextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/PremiumTextAppearance.Headline2</item>
        <item name="textAppearanceBody1">@style/PremiumTextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/PremiumTextAppearance.Body2</item>

    </style>

    <!-- Premium Toolbar Style -->
    <style name="PremiumToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/toolbar_gradient_background</item>
        <item name="android:elevation">8dp</item>
        <item name="titleTextAppearance">@style/PremiumTextAppearance.Toolbar</item>
        <item name="titleTextColor">@color/on_primary</item>
    </style>

    <!-- Premium Bottom Navigation Style -->
    <style name="PremiumBottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="android:elevation">16dp</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemActiveIndicatorStyle">@style/PremiumBottomNavIndicator</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="PremiumBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/background_secondary</item>
        <item name="android:shape">rectangle</item>
    </style>

    <!-- Premium Button Styles -->
    <style name="PremiumButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_gradient_background</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PremiumButtonOutlinedStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Premium Card Style -->
    <style name="PremiumCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Premium Text Appearances -->
    <style name="PremiumTextAppearance.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="PremiumTextAppearance.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PremiumTextAppearance.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PremiumTextAppearance.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PremiumTextAppearance.Toolbar" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Window Animation Style -->
    <style name="WindowAnimationTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Enhanced Dialog Theme -->
    <style name="AppMaterialAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="shapeAppearanceOverlay">@style/PremiumDialogShapeAppearance</item>
        <item name="materialAlertDialogTitleTextStyle">@style/PremiumDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/PremiumDialogBody</item>
    </style>

    <style name="PremiumDialogShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="PremiumDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PremiumDialogBody" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Enhanced Weather Detail Text Style -->
    <style name="WeatherDetailText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAppearance">@style/PremiumTextAppearance.Body1</item>
        <item name="android:background">@drawable/weather_detail_background</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>