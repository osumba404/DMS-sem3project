<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    Base application theme for Night Mode.
    It inherits from the same parent but uses darker colors.
    -->
    <style name="Theme.Mobile_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#121212</item> <!-- Standard dark theme background -->
        <item name="materialAlertDialogTheme">@style/AppMaterialAlertDialogTheme</item>

    </style>
</resources>