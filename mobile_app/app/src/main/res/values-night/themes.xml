<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    Dark theme with enhanced contrast and visibility
    -->
    <style name="Theme.Mobile_app" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary colors for dark mode -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/neutral_900</item>
        
        <!-- Surface colors for dark mode -->
        <item name="colorSurface">@color/neutral_800</item>
        <item name="colorSurfaceVariant">@color/neutral_700</item>
        <item name="colorOnSurface">@color/neutral_100</item>
        <item name="colorOnSurfaceVariant">@color/neutral_300</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/neutral_900</item>

        <!-- Background colors for dark mode -->
        <item name="android:colorBackground">@color/neutral_900</item>
        <item name="colorOnBackground">@color/neutral_100</item>

        <!-- Status bar styling -->
        <item name="android:statusBarColor">@color/neutral_900</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar styling -->
        <item name="android:navigationBarColor">@color/neutral_800</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Window styling -->
        <item name="android:windowBackground">@color/neutral_900</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        
        <!-- Material components styling -->
        <item name="materialAlertDialogTheme">@style/AppMaterialAlertDialogTheme</item>
        <item name="bottomNavigationStyle">@style/PremiumBottomNavigationStyle</item>
        <item name="toolbarStyle">@style/PremiumToolbarStyle</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/PremiumButtonStyle</item>
        <item name="materialButtonOutlinedStyle">@style/PremiumButtonOutlinedStyle</item>
        
        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/PremiumCardStyle</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/PremiumTextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/PremiumTextAppearance.Headline2</item>
        <item name="textAppearanceBody1">@style/PremiumTextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/PremiumTextAppearance.Body2</item>

    </style>

</resources>